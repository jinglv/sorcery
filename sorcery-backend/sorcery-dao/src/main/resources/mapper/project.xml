<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sorcery.platform.dao.ProjectDAO">
    <insert id="addProject" parameterType="com.sorcery.platform.domain.Project" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO t_projects(`project_name`, `describe`, `image`, `is_delete`, `user_id`, `create_time`,
        `update_time`)
        VALUES(#{projectName}, #{describe}, #{image}, #{isDelete}, #{userId}, #{createTime}, #{updateTime});
    </insert>

    <select id="getProjectById" resultType="com.sorcery.platform.domain.Project">
        SELECT *
        FROM `t_projects`
        WHERE `id`e=#{projectId};
    </select>

    <select id="getProjectByName" resultType="com.sorcery.platform.domain.Project">
        SELECT *
        FROM `t_projects`
        WHERE `project_nam`e=#{projectName};
    </select>

</mapper>